@model AccountModel

<form method="post">
  <input asp-for="Code" hidden />
  <div class="border p-3">

    <div class="form-group row">
      <h2 class="text-info pl-3">Edit Account</h2>
    </div>
    <div class="row">
      <div class="col-8">
        <div class="form-group row">
          <div class="col-4">
            <label asp-for="PersonCode"></label>
          </div>
          <div class="col-8">
            <input asp-for="PersonCode" class="form-control" />
            <span asp-validation-for="PersonCode" class="text-danger"></span>
          </div>

        </div>
        <div class="form-group row">
          <div class="col-4">
            <label asp-for="AccountNumber"></label>
          </div>
          <div class="col-8">
            <input asp-for="AccountNumber" class="form-control" />
            <span asp-validation-for="AccountNumber" class="text-danger"></span>
          </div>

        </div>
        <div class="form-group row">
          <div class="col-4">
            <label asp-for="OutstandingBalance"></label>
          </div>
          <div class="col-8">
            <input asp-for="OutstandingBalance" class="form-control" />
            <span asp-validation-for="OutstandingBalance" class="text-danger"></span>
          </div>

        </div>
        <div class="form-group row">
          <div class="col-8 offset-4 row">

            <div class="col">
              <input type="submit" class="btn btn-info w-100" value="Update" />
            </div>
            <div class="col">
              <input type="submit" class="btn btn-info w-100" value="Transaction" />
            </div>
            <div class="col">
              <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-4">
        @* Keep this empty *@
      </div>
    </div>
  </div>

</form>

@section Scripts{

  @{
      <partial name="_ValidationScriptsPartial" />
  }

}